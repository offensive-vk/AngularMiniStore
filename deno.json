{
  "tasks": {
    "dev": "ng serve --hmr --ssl --verbose --watch",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --optimization --aot --verbose --progress --source-map",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
    "fmt": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "semiColons": true,
      "singleQuote": true,
      "proseWrap": "preserve",
      "exclude": ["dist/**/*", ".angular/**/*", "node_modules/**/*"]
    }
  }  
